-title "User #{@user.username}"

%ul.user
  %li=@user.username
  %li=@user.email
  %li=@user.created_at
  - unless @user.authentications.empty?
    %ul.authentications
      - @user.authentications.each do |a|
        %li
          = a.provider
          |
          = a.uid
    %li=link_to "Edit Authentications", edit_users_authentication_path(@user)
  %li=link_to "Edit User", edit_adminarea_user_path(@user)
  %li= link_to "Destroy", adminarea_user_path(@user), :confirm => 'Are you sure?', :method => :delete
%li= link_to "Show All", adminarea_users_path

