!!! Strict
%html
  %head
    %title
      = "- SwimDB - | " << (yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    =# javascript_include_tag 'jquery/jquery-1.4.2.min.js'
    = csrf_meta_tag
    = yield(:head)

  %body
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"

    - if show_title?
      %h1= yield(:title)
    #user_nav
      %ul
        %li.first= link_to "Home", root_url
        - if user_signed_in?
          %li
            = "Signed in as #{current_user.username}. Not you?"
            = link_to "Logout", destroy_user_session_path
          %li
            = link_to "Edit Profile", edit_user_registration_path
            = link_to "cancle external signup", cancel_user_registration_path
        - else
          %li
            = link_to "SignUp", new_user_registration_path
            = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
            or
            = link_to "Login", new_user_session_path
        %li.last About

    #content
      =yield

    #footer

