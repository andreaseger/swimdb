%p
  %strong
    You can sign in to this account using:
.authentications
  - for authentication in @authentications
    .authentication
      = image_tag "#{authentication.provider}_32.png", :size => "32x32"
      .provider
        = authentication.provider.titleize
      .uid
        = authentication.uid
      = link_to "X", users_authentication_path(authentication), :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove"

  .clear

